# TG Traffic Master Environment Variables
# Скопируйте этот файл как .env и заполните своими значениями

# TGStat API Configuration
TGSTAT_API_KEY=your_tgstat_api_key_here
TGSTAT_API_URL=https://api.tgstat.ru

# CORS Proxy Configuration
CORS_PROXY_URL=https://api.allorigins.win/raw?url=

# Application Settings
APP_NAME=TG Traffic Master
APP_VERSION=1.0.0
APP_ENVIRONMENT=development

# Rate Limiting
API_RATE_LIMIT_DELAY=1000
API_MAX_RETRIES=3
API_BATCH_SIZE=10

# Storage Settings
STORAGE_PREFIX=tg_traffic_
MAX_STORAGE_SIZE=5242880

# Development Settings
DEV_SERVER_PORT=3000
DEV_CORS_ENABLED=true
DEV_HOT_RELOAD=false

# Analytics Settings
DEFAULT_ANALYSIS_PERIOD=7
QUALITY_SCORE_PRECISION=2
CPM_CALCULATION_BASE=100

# Export Settings
DEFAULT_EXPORT_FORMAT=excel
EXPORT_FILENAME_PREFIX=tg_channels_analysis_
MAX_EXPORT_RECORDS=1000

# UI Settings
DEFAULT_THEME=light
DEFAULT_LANGUAGE=ru
ANIMATIONS_ENABLED=true
NOTIFICATIONS_ENABLED=true

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=3600000
CACHE_MAX_SIZE=100

# Security Settings
API_KEY_ENCRYPTION=false
SECURE_STORAGE=true
CORS_ORIGINS=*

# Feature Flags
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_EXPORT_CHARTS=true
FEATURE_PROJECT_SHARING=false
FEATURE_CLOUD_SYNC=false
FEATURE_REALTIME_UPDATES=false

# External Services
BACKUP_SERVICE_URL=
NOTIFICATION_SERVICE_URL=
ANALYTICS_SERVICE_URL=

# Debug Settings
DEBUG_MODE=false
CONSOLE_LOGGING=true
ERROR_REPORTING=true
PERFORMANCE_MONITORING=false
